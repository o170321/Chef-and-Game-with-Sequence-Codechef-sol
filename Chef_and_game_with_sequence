n = int(input())

for i in range(n):
    k = int(input())
    l = list(map(int, input().split()))
    even_count = 0
    odd_count = 0
    for i in l:
        if((i % 2) == 0):
            even_count += 1
        else:
            odd_count += 1
    if(k == 1):
        print(1)

    elif((odd_count % 2) != 0):
        print(2)
    else:
        print(1)
